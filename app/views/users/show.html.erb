<div class="container toppage profiluser">
  <header class="row">

<div class="left-panel col-md-8">
  <div class="col-xs-3 useravatarbloc text-center">
    <p>
      <%= image_tag(@user.avatar, class:"img-responsive profilavatar img-circle") %>
    </p>
  </div>
  <div class="col-xs-5 useridbloc text-left grey1">
    <p class="pseudo">
      <%= @user.username %> rand
    </p>
    <p class="age">
      <%= @age %> ans
    </p>
    <p class="ville">
      <%= @user.city %>
    </p>
    <p class="idverif">
      Non vérifié
    </p>
  </div>
  <div class="col-xs-3 userbuttons">
    <ol class="list-unstyled text-right">
      <li>

      </li>
    </ol>
  </div>
<% if @user=current_user %>
  <div class="col-xs-12 text-center">
    <h5 class="text-center grey2 col-xs-11">Vous seul voyez ces détails...</h5>
    <%= link_to(edit_user_path(@user), :class =>"col-xs-1") do%>
    <i class="fa fa-pencil fa-lg" aria-hidden="true"></i>
    <% end %>

    <div class="row">
      <div class="col-md-4">
        <p><%= @user.prenom %></p>
          <p><%= @user.nom %></p>
          <p><%= if @user.gender then "Femme" else "Homme" end%>
        </p>
      </div>
      <div class="col-md-4">
        <p><%= @user.adress %></p>
        <p><%= @user.zipcode %>
          <%= @user.city %>
        </p>
      </div>
      <div class="col-md-4">

          <p>Tel:<%= @user.phone %></p>
          <p>@:<%= @user.email %></p>
          <p>Newsletter: <%= if @user.subscribe then "oui" else "non" end %>
        </p>

      </div>
    </div>
  </div>
<% end %>
  </div>



  <!-- Right part -->

<div class="col-md-4 text-center">
<h3>Prochains pickings</h3>
</div>




  </header>
</div>

























<script type="text/javascript">
function useridblocheight() {
 var avatarH = $('.useravatarbloc').first().innerHeight();
 $('.useridbloc').css({height: avatarH});
}

useridblocheight();

$(window).on('resize',function(){
useridblocheight();
});
</script>
