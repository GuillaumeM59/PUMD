    <script type="text/javascript">
    function centerrank() {
    var useravatarH = $('.useravatarbloc').first().innerHeight()/2;
    var ranktextW = $('.ranktext').first().innerWidth()/2;
    var rankH = $('.userbuttons').first().innerHeight()/2;
    var rankW = $('.userbuttons .rankpic').first().innerWidth()/2;
    $('.userbuttons').css({paddingTop: (useravatarH-rankH)});
    $('.userbuttons .rankpic').css({marginLeft: (ranktextW-rankW)});
    }

    centerrank();

    $(window).on('resize',function(){
