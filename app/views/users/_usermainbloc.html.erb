

<div class=" col-xs-6 col-sm-3 useravatarbloc text-center">
  <p>
    <%= image_tag(@user.avatar, class:"img-responsive profilavatar img-circle") %>
  </p>
</div>
<!-- Resp. design hidden xs -->
<div class="col-sm-7 useridbloc text-left grey1 hidden-xs">
  <p class="pseudo">
    <%= @user.username %>
    <span class="age">
      <%= @age %> ans, membre depuis <%= distance_of_time_in_words_to_now(@user.created_at) %>
    </span>
  </p>
  <p class="ville">
    <%= @user.city %>
  </p>
  <div class="stats row">
    <p class="col-xs-6 upcomingnbr">
      <%= image_tag("icons/riding-car.png", size:"30",class: "inline") %>   <%= a=Trajetpumd.isactive.where(:driver_id=>@user.id).size %> picking<%="s" if a>1 %> actif<%="s" if a>1 %> </p>
    <p class="col-xs-6 totalnbr">
      <%= image_tag("icons/checked-car.png", size:"30",class: "inline") %>   <%= a=Validation.where(:driver_id=>@user.id).where(:validated=>true).where(:ispumdval=>true).map{|a| a.driver_id}.uniq.size %> picking<%="s" if a>1 %> validé<%="s" if a>1 %> </p>
    </p>
    <p class="col-xs-6 totalcash">
      <%= image_tag("icons/euro-bill-with-wings.png", size:"35",class: "inline") %>  15 € de don </p>
    </p>
    <p class="col-xs-6 totalrating">rating</p>
  </div>
  </div>

<!--  -->


