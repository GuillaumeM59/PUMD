<!-- modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">

        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="panel">
                    <div id="login-form">

                        <div class="panel-body">
                            <div class="row">
                              <h3 class="modaltitle">CONNEXION <i class="fa fa-times-circle" aria-hidden="true"></i></h3>

                                <div class="data_input col-md-12 text-center">
                                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                                    <ol class="list-unstyled">

                                        <li class=" col-md-12 field">
                                            <%= f.text_field :username, autofocus: true, placeholder:"Pseudonyme" %>
                                        </li>

                                        <li class="col-md-12 field ">
                                            <%= f.password_field :password, autocomplete: "off", placeholder:"Mot de passe" %>
                                        </li>

                                        <% if devise_mapping.rememberable? -%>
                                        <li class="col-md-12 field">
                                            <%= f.check_box :remember_me %>
                                            <%= f.label :remember_me %>
                                        </li>
                                        <% end -%>

                                        <li class=" actions">
                                            <%= f.submit "Connexion", :class => "btn btn-o-purple" %>
                                        </li>
                                    </ol>
                                    <% end %>
                                </div>
                            </div>
                            <div class=" row grey1 modallinks">
                                <div class="col-xs-6 text-left">
                                    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                                    <%= link_to "Mot de passe oublié?", new_password_path(resource_name) %>
                                    <% end -%>
                                </div>
                                <div class="col-xs-6 text-right"><em class="grey2">Pas encore membre?</em>
                                    <a href="#" class="active" id="register-form-link" alt="onglet s'inscrire">S'inscrire</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="register-form">

                        <div class="panel-body">
                            <div class="row">
                                  <h3 class="modaltitle">CREATION DE COMPTE<i class="fa fa-times-circle" aria-hidden="true"></i></h3>
                                    <%=form_for resource, as: resource_name, url: registration_path(resource_name),class:" user",id:"form-sign-up", validate: true do |f| %>
                                    <%= devise_error_messages_for(resource) %>
                                    <div class="text-center row">

                                        <div class="data_input col-md-12">
                                            <ol class="list-unstyled">

                                                <li class="string input required stringish " id="user_username_input">
                                                    <%= f.text_field :username, required:true, uniqueness:true, placeholder:"Pseudonyme"%>
                                                </li>
                                                <li class="string input required stringish input-group " id="dtob">
                                                    <%= f.text_field :dob, required:true, id:"dtpickerdobhome", placeholder:"Date de naissance",class:"form-control" %>
                                                    <span class="input-group-addon">
                                                      <span class="fa fa-calendar">
                                                      </span>
                                                    </span>
                                                </li>
                                                <li class="email input required stringish " id="user_email_input">
                                                    <%= f.email_field :email, required:true, placeholder:"Email" %>
                                                    <p class="text-center ">
                                                        <%= f.check_box :subscribe, class:"checkb" %>
                                                        recevoir les news de PUMP
                                                    </p>
                                                </li>
                                            </ol>

                                        </div>
                                        <div class="password_input col-md-12">
                                            <ol class="list-unstyled">

                                                <li class="col-xs-12" id="user_password">
                                                    <%= f.password_field :password, autocomplete: "off", :data => {validation:"required"}, placeholder:"Mot de passe"%><br/>
                                                    <% if @minimum_password_length %>
                                                    <em class="text-center">(<%= @minimum_password_length %>
                                                        charactères minimum)</em>
                                                    <% end %>

                                                    <%= f.password_field :password_confirmation, autocomplete: "off", :data => {validation:"required"}, placeholder:"Confirmation Mot de passe"%>
                                                </li>

                                            </ol>
                                        </div>
                                    </div>
                                    <div class="col-md-12 text-center" id="user-inscription-submit">
                                        <%= f.submit "Je m'inscris",  :class => "btn btn-o-purple" %>
                                        <% end %>
                                    </div>
                                </div>
                            <div class="modallinks row grey1">
                                <div class="col-xs-6 text-left">
                                    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                                    <%= link_to "Mot de passe oublié?", new_password_path(resource_name) %>
                                    <% end -%>
                                </div>
                                <div class="col-xs-6 text-right"><em class="grey2">Déjà inscrit?</em>
                                  <a href="#" class="active" id="login-form-link" alt="onglet se connecter">Se connecter</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
