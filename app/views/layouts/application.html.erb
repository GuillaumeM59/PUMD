                    <button type="button" class="btn btn-lg btn-o-purple" data-toggle="modal" data-target="#myModal" alt="connexion">
                        Connexion</button>
                </li>
                <li class="hidden-md hidden-lg btn-o-purple">
                    <%= link_to "Connexion", new_user_session_path, class: "btn btn-lg", alt:"connexion" %>
                </li>
                <% end %>
            </ul>

        </div>
        <!-- /.nav-collapse -->
    </div>
    <!-- /.container -->
</nav>
