      </div>
      <div class="col-xs-3">
          <%= image_tag(trajet.user.avatar_url(:thumb), class:"img-responsive img-circle profilavatar") %>
      </div>


    </li>
    <% end %>
    <% end %>
    <% end %>
</ol>

