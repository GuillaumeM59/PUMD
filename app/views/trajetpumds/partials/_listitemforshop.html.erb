    </li>
    <li>
      <% if current_user.driver %>
      <%= link_to "Proposer un picking", new_trajetpumd_path(current_user)%>
      <% end %>
    </li>
    <% else %>
        <% trajets.each do |trajet| %>
        <%= link_to (trajetpumd_path(trajet)) do %>
