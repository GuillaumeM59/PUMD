          <script type="text/javascript">

function opensearchmenu(){
  $('.searchbloc').addClass('open-menu');
  $('button.new-search-btn i').removeClass('fa-map-o').addClass('fa-close');
}
function closesearchmenu(){
  $('.searchbloc').removeClass('open-menu');
  $('button.new-search-btn i').removeClass('fa-close').addClass('fa-map-o');
}
function openfiltermenu(){
  $('.filterbloc').addClass('open-menu');
  $('button.filters-btn i').removeClass('fa-sort-amount-desc').addClass('fa-close');
  var filterH = $('.filterbloc').first().innerHeight();
  $('.pickersbloc').addClass('open-menu').css({marginTop: '10%'})
}
function closefiltermenu(){
  $('.filterbloc').removeClass('open-menu');
  $('button.filters-btn i').removeClass('fa-close').addClass('fa-sort-amount-desc');
  $('.pickersbloc').removeClass('open-menu').css({marginTop: 0})
}

$(document).ready(function(){
    $('button.new-search-btn').click(function(){
      if ($('.searchbloc').hasClass('open-menu')) {
        closesearchmenu()
      }
      else {
        if ($('.filterbloc').hasClass('open-menu')) {
          closefiltermenu();
        }
        opensearchmenu()
      }
    });
    $('button.filters-btn').click(function(){
      if ($('.filterbloc').hasClass('open-menu')) {
        closefiltermenu()
      }
      else {
        if ($('.searchbloc').hasClass('open-menu')) {
          closesearchmenu();
        }
        openfiltermenu()
      }
    });

});


