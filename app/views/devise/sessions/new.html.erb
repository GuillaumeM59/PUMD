<div class="container toppage bcgblue">
  <div class="row">
<div class=" clearfix col-xs-12 col-md-10 col-md-offset-1 text-center signinbloc">
      <div class="row">
<h2 class=" col-md-12 text-center grey1"><i class="fa fa-sign-in fa-3x"></i> Connexion</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="signuppurple row">

<div class="data_input col-md-8">
<ol class="list-unstyled">

  <li class=" col-md-12 field">
    <%= f.label "Nom d'utilisateur" %><br />
    <%= f.text_field :username, autofocus: true %>
  </li>

  <li class="col-md-12 field ">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class=" col-xs-12 col-lg-12 lostpassword">
      <%= link_to "Mot de passe oubliÃ©?", new_password_path(resource_name) %><br />
    </div>
    <% end -%>
  </li>

  <% if devise_mapping.rememberable? -%>
    <li class="col-md-12 field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </li>
  <% end -%>

  <li class=" actions">
    <%= f.submit "Connexion", :class => "btn btn-o-purple form-control btn-connexion" %>
  </li>
<% end %>
</ol>
</div>



<div class="password_input col-md-4">
<div class="pasinscrit">

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <h4 class="text-center col-xs-12 col-lg-12">Pas encore inscrit?</h4>
  <div class=" col-xs-12 col-lg-12">
    <%= link_to "S'inscrire", new_registration_path(resource_name), class: "btn btn-o-purple" %><br />
  </div>
  <% end -%>
</div>

</div>
</div>

</div>
</div>
</div>
</div>
