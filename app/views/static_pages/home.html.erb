          <!-- centrer verticalement les icones -->
<script type="text/javascript">
function centerizebeneficons() {
 var divH = $('.benef-icon i').first().innerHeight()/2;
 var pageH = $('.benef-icon').first().innerHeight()/2;
 $('.benef-icon').css({paddingTop: (pageH-divH)});
 $('.benef-icon').last().css({paddingTop: (pageH-divH+6)});
}

centerizebeneficons();

$(window).on('resize',function(){
centerizebeneficons();
});
</script>

