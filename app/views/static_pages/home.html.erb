

<!-- PAGE CONTENT  -->

<header class="intro-header">
  <div class="container">

    <div class="row">
      <div class="col-lg-7 intro-message">
          <%= image_tag("banpump-01.png", class: "image-responsive headerillu", width:"70%" ) %>
          <h1>On vous ramène vos courses</h1>
      </div>
      <div class="col-lg-5 home-search-bloc">

          <%= form_tag trajetpumds_search_path, method: :post, class: "form-inline col-xs-12" do %>
          <div class="form-group searchgroup">
            <h2 class="text-center grey1">Trouver un picker</h2>
<div class="searchbar-bloc">

            <%= text_field_tag(
            :custom_address,
            params[:custom_address],
            placeholder: "rue, code postal et ville",
            class: "form-control searchbar"
              ) %> <label for=""> <i class="fa fa-2x fa-globe searchbar-i grey1" aria-hidden="true"></i></label>
<br>
              <%= button_tag(type:'submit', class: "btn btn-lg btn-search") do%>
              <i class="fa fa-search">
                Rechercher</i>
                <% end %>
              </div>
              </div>
              <% end %>
              <h4 class="col-xs-12 grey1">OU</h4>
              <div class="col-xs-12 aroundblocbtn">
                <%= link_to(trajetpumds_search_path(custom_address:""), class: "btn btn-lg btn-search") do %>
                <i class="fa fa-street-view" aria-hidden="true"></i> Autour de chez moi
                <% end %>
              </div>
              <div class="separator col-xs-12">


              </div>
              <div class="signin col-xs-12 text-left">
          <% if current_user  %>
          <%if current_user.driver %>
          <%= link_to "Proposer un picking", "", :class => "btn btn-default btn-lg hidden-xs hidden-sm", "data-toggle" => "modal","data-target" => "#newtrajetpumd" %>
          <%= link_to "Proposer un picking", new_trajetpumd_path(current_user), :class => "btn btn-default btn-lg hidden-md hidden-lg"%>
          <% else %>
          <%= link_to "Proposer un trajet", user_path(current_user), :class => "btn btn-default btn-lg", data: { confirm: 'Vous devez être conducteur pour poster une annonce. Modifiez votre profil. Vous pourrez bientot deposer une demande en tand que
            passager.' } %>
            <% end %>
            <% else %>
            <%= link_to "Inscrivez-vous!", new_user_registration_path , :class => "btn-default btn-lg btn-purple" %>
            <p class="text-center offert grey1">
              Inscription rapide et gratuite
            </p>
            <%end%>
          </div>
          </div>


          <%if current_user %>

          <div class="container hidden-xs hidden-sm ">
            <div class="row">

              <%if current_user.avatar == "/assets/default-3a2bb18cb5ec0e07a7b23f09ae06747a422809f9ba2f3ea9d13d8271a8a232d7.png"%>

              <div class=" col-md-offset-2 col-md-8 driverblock loggedannounce">

                <h4 class="text-center ">Vous n'avez pas encore de photo de profil, vous pouvez l'ajouter
                  <%= link_to "ici", edit_user_path(current_user) %></h4>
              </div>

              <%end  %>
              <% if @waitval != nil %>
              <%if @waitval.size !=0 %>

              <div class=" col-md-offset-2 col-md-8 loggedannounce">

                <h4 class="text-center ">Vous avez
                  <%= @waitval.size %>
                  validation<% if @waitval.size > 1%>s<%end%>
                  en attente, vous pouvez le<% if @waitval.size > 1%>s<%end%>
                  valider
                  <%= link_to "ici", user_path(current_user) %></h4>
              </div>

              <%end  %>
              <%end  %>




            </div>
          </div>
        </div>

<% else %>
</div>
<!-- FOOTER -->
</div>
<%end %>
</div>
</header>

