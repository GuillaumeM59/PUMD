}

@media all and (max-width:991px) {
  .intro-message {
    padding: 0;
    margin-top: 70px
  }
  .intro-message h1{
    background-color: rgba(0, 0, 0, 0.6);
    padding: 5% 0;
    border-radius: 20px;
    margin: 0
  }
  .intro-header {
  background: asset-url('imgtest/bg1.jpg') no-repeat 0 0 ;
  background-size: cover;
  padding-top: 70px;
  padding-bottom: 70px;
  }
  .home-mag ul li {
    margin-bottom: 20px
  }
  .home-post-bloc a {
    margin-top: 10px
  }
  .home-testimonial-bloc ul li{
  padding: 0
  }
  .home-testimonial-bloc ul li{
