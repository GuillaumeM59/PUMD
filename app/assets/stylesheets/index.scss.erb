}
.logohdf {
  background-color: white;
  border-radius: 25px;
  width: 80%;
  height: auto;
}
.presse {
  padding-top: 20px
}
.presse-item{
  padding: 40px;
  margin: 0 2%

}
.presse-link img {
  max-height: 100px;
  background-color: white
}
.home-logo-brand img{
  width: 100%;
