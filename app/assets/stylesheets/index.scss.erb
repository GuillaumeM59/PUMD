body {
  background: #ffffff;
}
nav{
  background-color: rgba(255, 255, 255, 0.85);
  border: none
}
.navbar-brand {
  padding: 0
}

// --------------------------------------------------------
.propocontainer {
  padding-top: 80px;
}

.intro-header {
  position: relative;
background: asset-url('imgtest/bg1.jpg') no-repeat 0 -200px ;
background-size: cover;
  text-align: center;
  width: 100%;
  color: #ffffff;
overflow: hidden;
padding-top: 140px;
padding-bottom: 100px
}
.offert{
	display: inline;
	vertical-align: bottom;
	padding-left: 10px;

}
#login-form .signuppurple, #register-form .signuppurple {
  margin-top: 0 !important;
  margin-bottom: 20px !important;
}

#register-form .signuppurple .data_input, #register-form .signuppurple .password_input, #login-form .signuppurple .data_input, #login-form .signuppurple .password_input {
  padding: 15px 0;
}

.intro-message {
  position: relative;
  padding: 5% 0
}

.home-search-bloc{
  background-color: rgba(255, 255, 255, 0.84);
  padding: 50px 20px;
  padding-top: 20px
}

.aroundblocbtn .fa{
  float: none;
}
.intro-message .separator {
padding-top: 20px;
padding-bottom: 0;
}
.separator{
  height: 45px
}

.intro-message > h1 {
  margin: 10px;
  text-shadow: 2px 2px 3px rgba(0,0,0,0.6);
  margin-bottom: 50px
  // font-size: 5em;
}
.intro-message > h3 {
  text-shadow: 2px 2px 3px rgba(0,0,0,0.6);
  margin-bottom: 20px
  // font-size: 5em;
}
.searchbar-bloc{
  position: relative
}
.searchgroup {
  width: 100%;
}
.searchbar {
  min-width: 100% !important;
  margin-bottom: 20px;
  height: 2.3em;
  font-size: 1.3em
}
.searchbar-i {
  font-size: 1.3em;
  width: 10% ;
	position: absolute;
	top: 7px;
	right: 7px;

}

.loggedannounce {
  border: 2px solid rgb(163, 163, 163);
  border-radius: 5px;
  color: black;
  font-weight: 600;
  margin-top: 4%;
}


.intro-divider {
  width: 80%;
  border-top: 1px solid #f8f8f8;
  border-bottom: 1px solid rgba(0,0,0,0.2);
}
.reservation {
  font-size: 130%;
}
.enseignesdarty {
  height: 60px;
  width: 60px;
}
.enseignesauchan {
  height: 40px;
  width: 150px;
}
.enseignes {
  margin: 0 auto;
}
// -----------------------------------------NAVBAR
#navbarimg {
  height: 58px;

}
.navbar-container {
  padding: 10px 0;
}

.navbar.navbar-fixed-top.fixed-theme {
  background-color: #FFF;
}
#navbarimg.fixed-theme {
  height: 50px;
  padding-top: 5px
}
.navbar-container.fixed-theme {
  padding: 0;
}
.navbar-brand img,
.navbar-brand.fixed-theme img,
.navbar-container,
.navbar-container.fixed-theme,
.navbar.navbar-fixed-top.fixed-theme {
  transition: 0.8s;
  -webkit-transition: 0.8s;
}
.logo_hot {
  height: 60px;
  width: auto;
}
.link_navbar {
  padding-top: 20px;
}

.searchtitle {
  padding-top: 70px;
}
// -------------- reservationmodal
body.modal-open #wrap {
  -webkit-filter: blur(7px);
  -moz-filter: blur(15px);
  -o-filter: blur(15px);
  -ms-filter: blur(15px);
  filter: blur(15px);
  border: solid 1px;
}
.modal-backdrop {
  background: #f7f7f7;
}
.close {
  font-size: 50px;
  display: block;
}


.btn-search {
  padding: 8px 10px;
  width: 100%;
  text-align: center;
}
.btn-search > i {
  float: none;
  line-height: 1.2em
}
.navbar-right {
	padding: 5px;
	padding-left: 160px;
	border-radius: 10px;
	margin-right: 15px;
}
.textholderempty {
  font-size: 1.3em;
  color: rgb(186, 186, 186);
  padding-top: 50px;
  text-align: center;
}
.topformular {
  padding-top: 30px;
}
// -----------------------------------------------------edit user

.edit {
  padding-top: 50px;
}
// ------vertical ligne
div.vertical-line {
  width: 2px;
  /* Line width */
  background-color: red;
  /* Line color */
  height: 100%;
  /* Override in-line if you want specific height. */
  float: left;
  /* Causes the line to float to left of content.
    You can instead use position:absolute or display:inline-block
    if this fits better with your design */
}
.fa-dot-circle-o {
  color: red;
}

.signin{
  display: inline-block;
}
.signin a{
  display: inline-block;
}

.postbiditem{
  padding-top: 2%
}

.homefooter{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: auto;
  background: none
}

.homefooter ul li a,.homefooter ul li {
  color: rgb(125, 125, 125);
  text-decoration: none;
}
.homefooter ul li a:hover {
  color: rgb(255, 255, 255);
  text-decoration: none;
}

.home-mag{
  padding-top: 20px ;
  background-color: white;
}
.home-post-bloc{
  padding: 0;
  background-color: white;
}
.home-post-bloc h3{
  margin: 10px 0;
  margin-bottom: 20px;
}

hr.home-bloc-separator{
  width: 25%;
  height: 3px;
  border-top: 3px solid white;
  border-radius: 25px
}

// BLOC BENEFICES
.home-benef-bloc {
  background-color: #00bbf0;
  color: white;
  padding: 80px 0
}
.benef-list {
  padding: 40px 0
}
.benef-item:nth-child(1)>.benef-icon {
  background-color: rgb(190, 114, 0);
}
.benef-item:nth-child(2)>.benef-icon {
  background-color: rgb(53, 142, 75);
}
.benef-item:nth-child(3)>.benef-icon {
  background-color: rgb(30, 55, 145);
}
.benef-item:nth-child(4)>.benef-icon {
  background-color: rgb(139, 62, 162);
}
.benef-item:nth-child(5)>.benef-icon {
  background-color: rgb(217, 191, 55);
}
.benef-item:nth-child(6)>.benef-icon {
  background-color: rgb(190, 16, 16);
}
.benef-item{
  margin: 0 2%
}
.benef-icon{
  width: 80px;
  height: 80px;
  border-radius: 20px;
  margin-bottom: 10px
}
.benef-icon i {
  float: none;
}
.benef-parag {
  font-size: 1.3em
}


// BLOC POUR QUI
.home-pourqui-bloc {
  background-color: #8e3dfb;
  color: white;
  padding: 80px 0
}
div.row.pourqui {
  margin-top: 60px
}
.futurevideo, .play {
  height: 300px
}
.futurevideo {
  position: relative;
  background-color: rgb(59, 68, 91);
  margin-bottom: 20px
}
.play {
  height: 300px;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0
}
.play i{
float: none;
position: absolute;
top: 35%;
left: 45%
}
.pourqui-video>p{
  bottom: 0
}
.pourqui-item{
margin-bottom: 20px !important
}
.pourqui-icon img{
  max-height: 80px;
  width: auto;
  max-width: 90%
}
.pourqui-item h5{
  font-size: 1.3em;
  text-decoration: underline;
}
.pourqui-text {
  padding: 0 !important
}

